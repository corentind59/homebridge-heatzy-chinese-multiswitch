{
  "pluginAlias": "HomebridgeHeatzyChineseMultiswitch",
  "pluginType": "platform",
  "singular": true,
  "strictValidation": true,
  "schema": {
    "type": "object",
    "properties": {
      "heatzyUsername": {
        "title": "Heatzy account username",
        "type": "string",
        "required": true,
        "description": "Username of your Heatzy account"
      },
      "heatzyPassword": {
        "title": "Heatzy account password",
        "type": "string",
        "required": true,
        "description": "Password of your Heatzy account"
      },
      "enableFrostProtection": {
        "title": "Enable frost protection",
        "type": "boolean",
        "default": false,
        "description": "Enable frost protection mode for all devices"
      },
      "enableOff": {
        "title": "Enable off",
        "type": "boolean",
        "default": false,
        "description": "Enable off mode for all devices"
      }
    }
  }
}
